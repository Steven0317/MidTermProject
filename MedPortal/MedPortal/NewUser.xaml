<Page x:Class="MedPortal.NewUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      
      xmlns:local="clr-namespace:MedPortal"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewUser">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition />
            <ColumnDefinition Width="20"/>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition />
            
            
        </Grid.ColumnDefinitions>


        <TextBlock x:Name="FName" VerticalAlignment="Center" HorizontalAlignment="Left" Text="First Name: " Grid.Row="1" Grid.Column="3" FontWeight="DemiBold"/>
        <TextBox x:Name="FBox" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="1"/>

        <TextBlock x:Name="LName" VerticalAlignment="Center" HorizontalAlignment="Left" Text="Last Name: " Grid.Row="1" Grid.Column="5" FontWeight="DemiBold" />
        <TextBox x:Name="LBox" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Grid.Row="1" Grid.Column="5" Grid.ColumnSpan="1" />

        <TextBlock x:Name="UName" VerticalAlignment="Center" HorizontalAlignment="Left" Text="Username: " Grid.Row="2" Grid.Column="3" FontWeight="DemiBold" />
        <TextBox x:Name="UBox" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="1" />

        <TextBlock x:Name="Pword" VerticalAlignment="Center" HorizontalAlignment="Left" Text="Password: " Grid.Row="3" Grid.Column="3" FontWeight="DemiBold"/>
        <TextBox x:Name="PBox" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="1" />

        <TextBlock x:Name="ConfPword" VerticalAlignment="Center" HorizontalAlignment="Left" Text="Confirm Password: " Grid.Row="3" Grid.Column="5" FontWeight="DemiBold"/>
        <TextBox x:Name="CPBox" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Grid.Row="3" Grid.Column="5" Grid.ColumnSpan="1" />

        <TextBlock x:Name="Social" VerticalAlignment="Center" HorizontalAlignment="Left" Text="SSN: " Grid.Row="4" Grid.Column="3" FontWeight="DemiBold" />
        <xctk:MaskedTextBox x:Name="SBox" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Grid.Row="4" Grid.Column="3" Grid.ColumnSpan="1" Mask="999 - 99 - 9999"/>


    </Grid>
</Page>
